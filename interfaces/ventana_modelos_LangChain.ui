/* === ESTILO PASTELES SUAVES Y UNIFORMES ESTILO MAC === */

QMainWindow {
    background-color: #f2edff; /* lavanda pastel */
    color: #4a4a4a;
    font-family: "Segoe UI Variable", "Roboto", "Open Sans";
}

/* === Men√∫ superior === */
QMenuBar {
    background-color: #e8e1ff;
    color: #4a4a4a;
    border: none;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected,
QMenuBar::item:hover {
    background-color: #d9d0ff;
    color: #4a4a4a;
}

/* === Men√∫s desplegables === */
QMenu {
    background-color: #f6f2ff;
    color: #4a4a4a;
    border: 1px solid #d6ccff;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background-color: #e4dbff;
}

/* === StatusBar === */
QStatusBar {
    background-color: #e8e1ff;
    color: #4a4a4a;
    border-top: 1px solid #d6ccff;
}

/* === Contenido central === */
#centralwidget {
    background-color: #ffffff;
    border-radius: 12px;
    margin: 10px;
}

/* === Entradas === */
QLineEdit, QTextEdit {
    background-color: #ffffff;
    border: 1px solid #d9d0ff;
    border-radius: 6px;
    padding: 6px;
    color: #4a4a4a;
}

QLineEdit:focus, QTextEdit:focus {
    background-color: #f5f1ff;
    border: 1px solid #b6a5ff;
}

/* === Botones === */
QPushButton {
    background-color: #eee8ff;
    color: #4a4a4a;
    border: 1px solid #d6ccff;
    border-radius: 6px;
    padding: 8px 14px;
}

QPushButton:hover {
    background-color: #dcd2ff;
}

QPushButton:pressed {
    background-color: #c8baff;
}

/* === Labels === */
QLabel {
    color: #4a4a4a;
}

/* === Ajustes generales === */
QWidget {
    background-color: transparent;
}

